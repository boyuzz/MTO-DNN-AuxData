{
	"name": "cifar100_classification", //  please remove "debug_" during training,
	"use_tb_logger": false,
	"manual_seed": 0,
	"resume": false,
	"niter": 2e5,
	"val_freq": 5e2,
	"patience": 0,
	"path": {
		"root": "../",
		"resume_state": null,
		"pretrain_model": null,
		"data_config": "./options/datasets.json"
	},
	"datasets": {
		"main": "CIFAR100"
	},
	"model":"classification",
	"network": "Cifar-ResNet18",	// Please specify "dataset_network"
	"val_split": "val",
//	"act_transfer": false,
//	"w_transfer": false,
	"train": {
		"optim": "SGD",
		"optimizer_param": {
			"lr": 0.1,
			"momentum": 0.9,
			"weight_decay": 1e-4,
			"nesterov": true
			// "amsgrad": true
		},
		"lr_scheme": "MultiStepLR",
		"lr_scheme_param": {
//			"base_lr": 1e-5,
//			"max_lr": 1e-2,
////			"step_size_up": 1e4,
//			"mode": "triangular2",
//			"cycle_momentum": true,
//			"base_momentum": 0.8,
//			"max_momentum": 0.95
			"milestones": [5e4, 1e5, 1.5e5],
			"gamma": 0.1
//			"factor": 0.2,
//			"patience": 100,
//			"min_lr": 1e-6
		},
		"loss": "cross_entropy",	// L1 loss is hard to optimise
		"kd_weight": 1,
		"at_weight": 1,
		"ws_weight": 0.1
	},
	"logger": {
		"print_freq": 100,
		"save_checkpoint_freq": 2e4
	}
}
